@model AttachmentFile

<div id="modalAttachment" tabindex="-1" role="dialog" aria-labelledby="AttachmentModal" aria-hidden="true" class="modal fade text-left" data-backdrop="static" data-keyboard="false">
    <div role="document" class="modal-dialog" style="max-width: 50% !important;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modalTitle" class="modal-title">Attached Document</h4>
                <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body" id="imgAttachmentContainer">
                <input type="hidden" id="hdnImageIDs" value="[0]" />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <img id="imgAttachment" src="https://static.pexels.com/photos/1944/lights-abstract-curves-long-exposure.jpg" class="img-fluid rounded img-thumbnail" />
                            @*<iframe src="/ViewerJS/#../Uploads/1/Lifting of damaged and Obselete books.pdf" width="400" height="300" allowfullscreen webkitallowfullscreen></iframe>*@
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        &nbsp;
                    </div>
                    <div class="col-lg-4">
                        <div class="text-center">
                            <button class="btn btn-xs btn-secondary" id="btnPreviousImg" title="Previous"><i class="fa fa-chevron-left"></i></button>
                            <button class="btn btn-xs btn-secondary" id="btnNextImg" title="Next"><i class="fa fa-chevron-right"></i></button>
                        </div>
                        <input type="hidden" id="hdnCurrent" value="0" />
                        <input type="hidden" id="hdnNext" value="0" />
                        <input type="hidden" id="hdnPrevious" value="0" />
                    </div>
                    <div class="col-lg-4">
                        &nbsp;
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-secondary">Close</button>
            </div>
        </div>
    </div>
</div>