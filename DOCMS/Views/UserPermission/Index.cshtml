@model IEnumerable<UserPermissionMaster>
@{
    ViewBag.Title = "Permission Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="tables">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-close">
                        <div class="dropdown">
                            <button type="button" id="closeCard" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></button>
                            <div aria-labelledby="closeCard" class="dropdown-menu has-shadow">
                                <a href="@(Url.Action("New", "UserPermission", new { area = "" }))" class="dropdown-item edit"><i class="fa fa-gear"></i>Add new Permission</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">&nbsp;</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12 dvTable" style="max-height: 330px; overflow-y: auto;">
                                <table class="table table-striped table-hover table-bordered table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Action</th>
                                            <th>UserID</th>
                                            <th>OrgID</th>
                                            <th>LocationID</th>
                                            <th>SublocationID</th>
                                            <th>DeptID</th>
                                            <th>ProjectID</th>
                                            <th>SubTypeID</th>
                                            
                                            <th>HasFullPermission</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Count() > default(int))
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <a title="Edit" href="@(Url.Action("New", "Organization", new { area = "" }))?id=@(Encryption64.EncryptQueryString(Convert.ToString(item.AccessID)))"><i class="fa fa-pencil-square-o"></i></a>
                                                    </td>
                                                    <td title="@item.UserID">@item.UserEmail</td>
                                                    <td title="@item.UserID">@item.OrganizationName</td>
                                                    <td title="@item.UserID">@item.LocationName</td>
                                                    <td title="@item.UserID">@item.SubLocationName</td>
                                                    <td title="@item.UserID">@item.DeptName</td>
                                                    <td title="@item.UserID">@item.ProjectName</td>
                                                    <td title="@item.UserID">@item.SubTypeName</td>
                                                    <td title="@item.UserID">@item.HasFullPermission</td>
                                                   
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr class="text-center bg-blue-grey">
                                                <td colspan="8">
                                                    <label class="text-center">No item(s) found</label>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>